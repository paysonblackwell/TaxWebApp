@model IEnumerable<TaxWebApp.Models.Person>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Person[] person = (Person[])ViewData["peopleArray"];
}

<style>
    .tab-content tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<h1>Today is: @ViewData["toDayDate"] </h1>

<!-- Link to my example Page-->
