        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.New)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ReferedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.In)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Scanned)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preparer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a href="/People/Details/@item.Id">Details</a> |
                    <a href="/People/Edit/@item.Id">Edit</a>
